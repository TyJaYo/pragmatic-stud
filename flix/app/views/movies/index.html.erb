<% @movies.each do |movie| %>
  <section class='movie clearfix'>
      <h2>
        <%= link_to movie.title, movie_path(movie.id) %>
      </h2>
      <h3>
        <%= total_gross(movie) %>
      </h3>
      <p class='movie-description'>
      <%= image_tag(safe_title(movie), class: 'movie-poster') %>
        <%= truncate(movie.description, length: 150, separator: ' ') %>
      </p>
  </section>
<% end %>
<section class="admin">
  <%= link_to "Add New Movie", new_movie_path, class: "button" %>
</section>

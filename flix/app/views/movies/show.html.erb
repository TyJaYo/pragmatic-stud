<section class='movie-details'>
  <div class='details'>
    <h1><%= @movie.title %></h1>
    <h2>
      <%= @movie.released_on.year %> &bull; <%= @movie.rating %>
    </h2>
    <%= image_tag(safe_title(@movie), class: 'movie-poster') %>
    <p>
      <%= @movie.description %>
    </p>
    <table>
      <tr>
        <th>Total Gross:</th>
        <td><%= total_gross(@movie) %></td>
      </tr>
    </table>
  </div>
</section>

<section class='admin'>
  <%= link_to 'Edit', edit_movie_path, class: 'button' %>
  <%= link_to 'Delete', @movie, class: 'button',
        data: { turbo_method: :delete, turbo_confirm: 'Really?'} %>
</section>
